<main>
    <h2>All Movies:</h2>
    <a href="/movies/new">Add New Movie</a>
    {{#each movies}}
        <div>
            <a href="/movies/{{this._id}}"><h3>{{this.title}}</h3></a>

            <a href="/movies/{{this._id}}/edit">Editar Filme</a>

            <form action="/movies/{{this._id}}/delete" method="post">
                <button type="submit">Exluir Filme</button>
            </form>
        </div>
    {{/each}}
</main>