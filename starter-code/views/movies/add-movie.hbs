<form action="/movies" method="post">
    <div>
        <label for="title">Movie Name</label>
        <input type="text" name="title" id="title" placeholder="Insert movie name">
    </div>

    <div>
        <label for="genre">Movie</label>
        <input type="text" name="genre" id="genre" placeholder="Insert movie genre">
        
    </div>
    
    <div>
        <label for="plot">Plot</label>
        <input type="text" name="plot" id="plot" placeholder="Insert Plot">
    </div>

    {{#if errorMessage}}
    <p>{{errorMessage}}</p>
    {{/if}}

    <button type="submit">Create</button>
</form>