<form action="/movies/{{movie._id}}" method="post">
    <div>
        <label for="title">Movie Name</label>
        <input type="text" name="title" id="title" placeholder="Insert movie name" value="{{movie.name}}">
    </div>

    <div>
        <label for="genre">Movie Genre</label>
        <input type="text" name="genre" id="genre" placeholder="Insert movie genre" value="{{movie.genre}}">
    </div>
    
    <div>
        <label for="plot">Catch Phrase</label>
        <input type="text" name="plot" id="plot" placeholder="Insert Movie Plot" value="{{movie.plot}}">
    </div>

    {{#if errorMessage}}
    <p>{{errorMessage}}</p>
    {{/if}}

    <button type="submit">Edit</button>
</form>